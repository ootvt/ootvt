---
import { getCollection } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_TITLE } from '../consts';

const posts = await getCollection('blog');

// 统计每个标签的文章数量
const tagCounts = new Map<string, number>();
posts.forEach(post => {
	post.data.tags.forEach(tag => {
		tagCounts.set(tag, (tagCounts.get(tag) || 0) + 1);
	});
});

// 转换为数组并按文章数量排序
const sortedTags = Array.from(tagCounts.entries())
	.sort((a, b) => b[1] - a[1]);
---

<!doctype html>
<html lang="zh-CN">
	<head>
		<BaseHead title={`分类 - ${SITE_TITLE}`} description="博客文章分类" />
		<link href="https://fonts.googleapis.com/css2?family=Alfa+Slab+One&family=Noto+Serif+SC:wght@300;400;500;700&display=swap" rel="stylesheet">
		<style>
			main {
				width: 100%;
				max-width: 672px;
				margin: 0 auto;
				padding: 0 1rem 3rem;
			}

			.page-title-wrapper {
				position: relative;
				display: inline-block;
				padding-right: 1.25rem;
				margin-bottom: 2rem;
			}

			.page-title-bg {
				position: absolute;
				left: 0;
				top: 0;
				height: 100%;
				width: 4px;
				background-color: var(--main-color);
				z-index: -1;
			}

			.page-title {
				font-size: 2rem;
				font-weight: bold;
				color: var(--main-color);
				padding-left: 1rem;
				margin: 0;
			}

			.categories-grid {
				display: grid;
				grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
				gap: 1.5rem;
				list-style: none;
				margin: 0;
				padding: 0;
			}

			.category-item {
				margin: 0;
			}

			.category-link {
				display: flex;
				justify-content: space-between;
				align-items: center;
				padding: 1.5rem;
				background-color: var(--box-bg);
				border: 1px solid transparent;
				transition: all 0.2s ease;
				text-decoration: none;
				color: var(--main-color);
			}

			.category-link:hover {
				border-color: var(--main-color);
				transform: translate(-2px, -2px);
				box-shadow: 2px 2px 0px 0px var(--main-color);
			}

			.category-name {
				font-size: 1.125rem;
				font-weight: 500;
				margin: 0;
			}

			.category-count {
				font-size: 1.5rem;
				font-weight: bold;
				color: var(--main-color);
				opacity: 0.6;
			}

			.total-info {
				margin-top: 2rem;
				padding: 1rem 1.5rem;
				background-color: var(--box-bg);
				text-align: center;
				color: var(--main-color);
				opacity: 0.8;
			}

			@media (max-width: 768px) {
				.categories-grid {
					grid-template-columns: 1fr;
				}

				.page-title {
					font-size: 1.5rem;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<div class="page-title-wrapper">
				<div class="page-title-bg"></div>
				<h1 class="page-title">分类</h1>
			</div>

			<ul class="categories-grid">
				{sortedTags.map(([tag, count]) => (
					<li class="category-item">
						<a href={`/tags/${tag}/`} class="category-link">
							<span class="category-name"># {tag}</span>
							<span class="category-count">{count}</span>
						</a>
					</li>
				))}
			</ul>

			<div class="total-info">
				共 {sortedTags.length} 个分类，{posts.length} 篇文章
			</div>
		</main>
		<Footer />
	</body>
</html>