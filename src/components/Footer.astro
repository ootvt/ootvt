---
const today = new Date();
---

<footer>
	<div class="footer-content">
		<div class="copyright">© {today.getFullYear()} ootvt</div>
		<div class="social-links">
			<a href="https://twitter.com/astrodotbuild" target="_blank" aria-label="Twitter">
				<i class="ri-twitter-x-line"></i>
			</a>
			<a href="https://github.com/withastro/astro" target="_blank" aria-label="GitHub">
				<i class="ri-github-line"></i>
			</a>
			<a href="/rss.xml" target="_blank" aria-label="RSS">
				<i class="ri-rss-line"></i>
			</a>
		</div>
	</div>
</footer>

<link href="https://cdn.jsdelivr.net/npm/remixicon@3.5.0/fonts/remixicon.css" rel="stylesheet">

<style>
	footer {
		/* 顶部保持 2rem */
		margin-top: 2rem;
		
		/* 【修改】底部 padding 改为 2rem (原为 0.5rem) */
		/* 顺序：上 1.5rem | 左右 0 | 下 2rem */
		padding: 0rem 0 1.5rem; 
		
		background: transparent;
		width: 100%;
	}

	.footer-content {
		width: 100%;
		max-width: 672px;
		margin: 0 auto;
		padding: 0 1rem;
		display: flex;
		justify-content: space-between;
		align-items: center;
		color: var(--main-color);
		opacity: 0.8;
		box-sizing: border-box;
	}

	.copyright {
		font-size: 0.75rem;
	}

	.social-links {
		display: flex;
		gap: 1rem;
		font-size: 1.125rem;
	}

	.social-links a {
		color: var(--main-color);
		text-decoration: none;
		transition: color 0.2s ease;
		display: flex;
		align-items: center;
	}

	.social-links a:hover {
		color: #000;
	}

	@media (max-width: 768px) {
		.footer-content {
			flex-direction: column;
			gap: 1rem;
			text-align: center;
		}
	}
</style>